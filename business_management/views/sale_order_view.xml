<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Inherited form view of sale.order #T00377 -->
    <record id="sale_order_view_form" model="ir.ui.view">
        <field name="name">sale.order.view.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <!--added field  #T00377 -->
                <field name="about_invoice" />
                <!--added field  #T00391 -->
                <field name="about_delivery" />
                <!--added field  #T00399 -->
                <field name="about_purchase" />
                <!--added field  #T00406 -->
                <field name="about_manufacturing" />
                <!--added field  #T00411 -->
                <field name="about_project" />
                <field name="about_task" />
            </xpath>
        </field>
    </record>
</odoo>
