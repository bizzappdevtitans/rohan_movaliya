<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- action for student records #T00468 -->
    <record
        id="action_placement_cell_placement_staff_record"
        model="ir.actions.act_window"
    >
        <field name="name">Placement Cell Staff</field>
        <field name="res_model">placement.staff</field>
        <field name="view_mode">tree,form,search</field>
    </record>
    <!-- form view for student records #T00468 -->
    <record id="placement_cell_staff_view_form" model="ir.ui.view">
        <field name="name">staff.view.form</field>
        <field name="model">placement.staff</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field
                        class="oe_avatar"
                        name="image"
                        options="{&quot;preview_image&quot;: &quot;avatar_128&quot;}"
                        widget="image"
                    />
                    <div class="oe_title mb24">
                        <h1>
                            <field
                                class="text-break"
                                default_focus="1"
                                name="name"
                                placeholder="e.g. Ms. Bhoomi Parmar"
                            />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="position" />
                        </group>
                        <group>

                        </group>
                    </group>
                    <notebook>
                        <page string="Other Info">
                            <group>
                                <group>

                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="activity_ids" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>
    <!-- tree view for student records #T00468 -->
    <record id="placement_cell_staff_view_tree" model="ir.ui.view">
        <field name="name">staff.view.tree</field>
        <field name="model">placement.staff</field>
        <field name="arch" type="xml">
            <tree class="text-center oe_inline">
                <field name="name" />
                <field name="position" />
            </tree>
        </field>
    </record>
</odoo>
