<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- action for company record #T00468 -->
    <record id="action_placement_cell_company_record" model="ir.actions.act_window">
        <field name="name">Company Record</field>
        <field name="res_model">company.record</field>
        <field name="view_mode">tree,form,search,kanban</field>
    </record>

    <!-- form view for company record  #T00468 -->
    <record id="placement_cell_company_view_form" model="ir.ui.view">
        <field name="name">company.view.form</field>
        <field name="model">company.record</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field
                        class="oe_avatar"
                        name="image"
                        options="{&quot;preview_image&quot;: &quot;avatar_128&quot;}"
                        widget="image"
                    />
                    <div class="oe_title mb24">
                        <h1>
                            <field
                                class="text-break"
                                default_focus="1"
                                name="name"
                                placeholder="e.g. BizzAppDev Systems Pvt. Ltd."
                            />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="address" />
                            <field name="website" widget="url" />
                            <field name="linkedin" widget="url" />
                            <field name="job_position" />
                            <field name="job_description" />
                        </group>
                        <group>
                            <field name="application_deadline" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Other Info">
                            <group>
                                <group>
                                    <field name="company_profile" />
                                    <field name="package_offer" />
                                </group>
                            </group>
                        </page>
                        <page string="Student Details">
                            <field name="student_ids" />
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="activity_ids" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>

    <!-- tree view for company record #T00468 -->
    <record id="placement_cell_company_view_tree" model="ir.ui.view">
        <field name="name">company.view.tree</field>
        <field name="model">company.record</field>
        <field name="arch" type="xml">
            <tree class="text-center oe_inline">
                <field name="name" />
                <field name="website" widget="url" />
                <field name="linkedin" widget="url" />
                <field name="job_position" />
            </tree>
        </field>
    </record>

</odoo>
