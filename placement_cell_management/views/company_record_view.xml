<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- action for company record -->
    <record id="action_placement_cell_company_record" model="ir.actions.act_window">
        <field name="name">Company Record</field>
        <field name="res_model">company.record</field>
        <field name="view_mode">tree,form,search,kanban</field>
    </record>

    <!-- form view for company record -->
    <record id="placement_cell_company_view_form" model="ir.ui.view">
        <field name="name">company.view.form</field>
        <field name="model">company.record</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title mb24">
                        <h1>
                            <field
                                class="text-break"
                                default_focus="1"
                                name="name"
                                placeholder="e.g. BizzAppDev Systems Pvt. Ltd."
                            />
                        </h1>
                    </div>
                    <group>
                        <field name="address" />
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="activity_ids" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>

    <!-- tree view for company record -->
    <record id="placement_cell_company_view_tree" model="ir.ui.view">
        <field name="name">company.view.tree</field>
        <field name="model">company.record</field>
        <field name="arch" type="xml">
            <tree class="text-center oe_inline">
                <field name="name" />
            </tree>
        </field>
    </record>

</odoo>
