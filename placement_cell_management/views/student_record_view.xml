<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- action for student records -->
    <record id="action_placement_cell_student_record" model="ir.actions.act_window">
        <field name="name">Student Record</field>
        <field name="res_model">student.record</field>
        <field name="view_mode">tree,form,search</field>
    </record>

    <!-- form view for student records -->
    <record id="placement_cell_student_view_form" model="ir.ui.view">
        <field name="name">student.view.form</field>
        <field name="model">student.record</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field
                        name="image"
                        widget="image"
                        class="oe_avatar"
                        options="{&quot;preview_image&quot;: &quot;avatar_128&quot;}"
                    />
                     <div class="oe_title mb24">
                        <h1>
                            <field
                                class="text-break"
                                name="name"
                                default_focus="1"
                                placeholder="e.g. Rohan Movaliya"
                            />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="enrollment_no" />
                            <field
                                name="gender"
                                widget="radio"
                                options="{'horizontal': true}"
                            />
                            <field name="department" />
                            <field name="cpi" />
                            <field name="is_backlog" />
                            <field
                                name="no_of_backlog"
                                attrs="{'invisible':[('is_backlog','=',False)]}"
                            />
                         </group>
                    </group>
                    <notebook>
                        <page string="Other Details">
                        </page>
                        <page string="Company">
                        </page>
                    </notebook>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="activity_ids" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>

    <!-- tree view for student records -->
    <record id="placement_cell_student_view_tree" model="ir.ui.view">
        <field name="name">student.view.tree</field>
        <field name="model">student.record</field>
        <field name="arch" type="xml">
            <tree class="text-center oe_inline">
                <field name="enrollment_no" />
                <field name="name" />
                <field name="gender" />
                <field name="department" />
                <field name="cpi" />
            </tree>
        </field>
    </record>
</odoo>
