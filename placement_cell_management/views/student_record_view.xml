<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- action for student records #T00468 -->
    <record id="action_placement_cell_student_record" model="ir.actions.act_window">
        <field name="name">Student Record</field>
        <field name="res_model">student.record</field>
        <field name="view_mode">tree,form,search</field>
    </record>
    <!-- form view for student records #T00468 -->
    <record id="placement_cell_student_view_form" model="ir.ui.view">
        <field name="name">student.view.form</field>
        <field name="model">student.record</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button
                            class="oe_stat_button"
                            string="Company"
                            icon="fa-files-o"
                            name="applied_company_details"
                            type="object"
                        >
                        </button>
                    </div>
                    <field
                        class="oe_avatar"
                        name="image"
                        options="{&quot;preview_image&quot;: &quot;avatar_128&quot;}"
                        widget="image"
                    />
                    <div><br /></div>
                    <div class="oe_title mb24">
                        <h1>
                            <field
                                class="text-break"
                                default_focus="1"
                                name="name"
                                placeholder="e.g. Rohan Movaliya"
                            />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="enrollment_no" />
                            <field
                                name="gender"
                                options="{'horizontal': true}"
                                widget="radio"
                            />
                            <field name="department" />
                            <field name="cpi" />
                            <field name="is_backlog" />
                            <field
                                attrs="{'invisible':[('is_backlog','=',False)]}"
                                name="no_of_backlog"
                            />
                        </group>
                        <group>
                            <field name="email_id" widget="email" />
                            <field name="contact" widget="phone" />
                            <field name="resume" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Other Info">
                            <group>
                                <group>
                                    <field name="year" string="Placement Year" />
                                    <field name="address" string="Address" />
                                    <field
                                        name="skill"
                                        placeholder="e.g. Python Programming"
                                    />
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="activity_ids" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>
    <!-- tree view for student records #T00468 -->
    <record id="placement_cell_student_view_tree" model="ir.ui.view">
        <field name="name">student.view.tree</field>
        <field name="model">student.record</field>
        <field name="arch" type="xml">
            <tree class="text-center oe_inline">
                <field name="enrollment_no" />
                <field name="name" />
                <field name="gender" />
                <field name="department" />
                <field name="cpi" />
            </tree>
        </field>
    </record>
</odoo>
