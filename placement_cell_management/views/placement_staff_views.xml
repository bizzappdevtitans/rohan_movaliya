<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- action for placement staff #T00468 -->
    <record
        id="action_placement_cell_placement_staff_record"
        model="ir.actions.act_window"
    >
        <field name="name">Placement Cell Staff</field>
        <field name="res_model">placement.staff</field>
        <field name="view_mode">tree,form,search,activity</field>
    </record>

    <!-- form view for placement staff #T00468 -->
    <record id="placement_cell_staff_view_form" model="ir.ui.view">
        <field name="name">staff.view.form</field>
        <field name="model">placement.staff</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field
                        class="oe_avatar"
                        name="image"
                        options="{&quot;preview_image&quot;: &quot;avatar_128&quot;}"
                        widget="image"
                    />
                    <div class="oe_title mb24">
                        <h1>
                            <field
                                class="text-break"
                                default_focus="1"
                                name="name"
                                placeholder="e.g. Ms. Bhoomi Desai"
                            />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="position" />
                            <field name="contact" widget="phone" />
                            <field name="seating" placeholder="e.g. B-305" />
                        </group>
                        <group />
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="activity_ids" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>

    <!-- tree view for placement staff #T00468 -->
    <record id="placement_cell_staff_view_tree" model="ir.ui.view">
        <field name="name">staff.view.tree</field>
        <field name="model">placement.staff</field>
        <field name="arch" type="xml">
            <tree class="text-center oe_inline">
                <field name="name" />
                <field name="position" />
                <field name="contact" widget="phone" />
                <field name="seating" />
            </tree>
        </field>
    </record>

    <!-- search view for placement staff #T00468 -->
    <record id="placement_cell_staff_view_search" model="ir.ui.view">
        <field name="name">staff.view.search</field>
        <field name="model">placement.staff</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="position" />
                <field name="contact" widget="phone" />
                <field name="seating" />
                <field name="email_id" />
                <group expand="0" string="Group By">
                    <filter
                        string="Seating"
                        name="seating"
                        context="{'group_by':'seating'}"
                    />
                </group>
            </search>
        </field>
    </record>

    <!-- activity view placement staff #T00468 -->
    <record id="placement_cell_staff_view_activity" model="ir.ui.view">
        <field name="name">staff.view.activity</field>
        <field name="model">placement.staff</field>
        <field name="arch" type="xml">
            <activity string="Staff Activity">
                <templates>
                    <div t-name="activity-box">
                        <div>
                            <field name="name" display="full" />
                        </div>
                    </div>
                </templates>
            </activity>
        </field>
    </record>
</odoo>
