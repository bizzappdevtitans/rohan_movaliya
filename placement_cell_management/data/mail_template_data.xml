<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- server action for sending mail when sechduled training session #T00468 -->
    <record id="model_send_taining_mail" model="ir.actions.server">
        <field name="name">Training Session Mail</field>
        <field name="model_id" ref="model_student_record" />
        <field name="binding_model_id" ref="model_student_record" />
        <field name="binding_view_types">list,form</field>
        <field name="state">code</field>
        <field name="code">model = records.action_send_email_for_training()</field>
    </record>

    <!-- server action for sending mail when company driven campus #T00468 -->
    <record id="model_send_company_driven_mail" model="ir.actions.server">
        <field name="name">Company Driven Mail</field>
        <field name="model_id" ref="model_student_record" />
        <field name="binding_model_id" ref="model_student_record" />
        <field name="binding_view_types">list,form</field>
        <field name="state">code</field>
        <field name="code">model = records.action_send_email_for_placement()</field>
    </record>
</odoo>
