<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- action for config setting #T00427 -->
    <record id="action_rec_config_settings" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' :'book_shelf','bin_size': False}</field>
    </record>

    <!-- form view #t00427 -->
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.book_shelf</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div
                    class="app_settings_block"
                    data-string="Book Shelf Management"
                    id="book_shelf_management"
                    string="Book Shelf Management"
                    data-key="Book Shelf Management"
                >
                    <h2>Book Shelf Management</h2>
                    <div
                        class="row mt16 o_settings_container"
                        id="book_shelf_management_setting"
                    >
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane" />
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Book Return Criteria</span>
                                <div class="text-muted content-group mt16">
                                    <span>Minimum Days</span>
                                    <field
                                        name="min_day"
                                        class="text-center oe_inline"
                                    />
                                    <span>Days</span>
                                </div>
                                <div>
                                    <br />
                                </div>
                                <div class="text-muted content-group mt16">
                                    <span>Maximum Age</span>
                                    <field
                                        name="max_day"
                                        class="text-center oe_inline"
                                    />
                                    <span>Days</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
